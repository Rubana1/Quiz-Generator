<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Quiz Generator Application</display-name>

    <!-- Servlet Mapping for LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.api.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/api/login</url-pattern>
    </servlet-mapping>

<!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>createQuiz.jsp</welcome-file>
    </welcome-file-list>


    <!-- Servlet Mapping for CreateQuizServlet -->
    <servlet>
        <servlet-name>CreateQuizServlet</servlet-name>
        <servlet-class>com.api.CreateQuizServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateQuizServlet</servlet-name>
        <url-pattern>/createQuiz</url-pattern>
    </servlet-mapping>

    <!-- Servlet Mapping for GetAllQuizzesServlet -->
    <servlet>
        <servlet-name>GetAllQuizzesServlet</servlet-name>
        <servlet-class>com.api.GetAllQuizzesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllQuizzesServlet</servlet-name>
        <url-pattern>/getAllQuizzes</url-pattern>
    </servlet-mapping>

    <!-- Servlet Mapping for GetQuizServlet -->
    <servlet>
        <servlet-name>GetQuizServlet</servlet-name>
        <servlet-class>com.api.GetQuizServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetQuizServlet</servlet-name>
        <url-pattern>/getQuiz</url-pattern>
    </servlet-mapping>

    <!-- Servlet Mapping for AddQuestionServlet -->
    <servlet>
        <servlet-name>AddQuestionServlet</servlet-name>
        <servlet-class>com.api.AddQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddQuestionServlet</servlet-name>
        <url-pattern>/addQuestion</url-pattern>
    </servlet-mapping>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>createQuiz.jsp</welcome-file>
    </welcome-file-list>

</web-app>
